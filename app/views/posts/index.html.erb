<!-- Loop through each post and put them in post-wrapper-->
<!-- Then link the title to the post -->

<!DOCTYPE html>
<html>

<head>
	<!-- Bootstrap -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/bootstrap.min.css" media="all" rel="stylesheet" />
</head>

<body>

<% @posts.each_slice(3) do |posts| %>

  		
  		<div class="row intro">
  			<p>Cupcake ipsum dolor sit amet icing fruitcake lollipop tootsie roll. Toffee candy canes topping sugar plum. Biscuit icing fruitcake powder cheesecake cupcake.
  			</p>
  			
  		</div>

	  	<div class="row post_covers">
	    <% posts.each do |post| %>
	      <div class="col-md-4">
	      	<%= link_to image_tag post.cover.url if post.cover?%>

	      	<h1 class="title"><%= link_to post.title, post %></h1>
			<p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p>
			<p class="profile"><%=raw post.profile %></p>
			<p class="description"><%=raw post.description %></p>
	      </div>
	    <% end %>
	  	</div>
 	

<% end %>

</body>

</html>



