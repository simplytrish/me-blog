<% @posts.each_slice(3) do |posts| %>

	  	<div class="row post_covers">
		    <% posts.each do |post| %>
		      <div class="col-md-4">
		      	<%= link_to image_tag post.cover.url if post.cover?%>

		      	<h4 class="title"><%= link_to post.title, post %></h4>
				<!--<p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p>-->
				<p class="profile"><%=raw post.profile %></p>
				<p class="description"><%=raw post.description %></p>
		      </div>
		    <% end %>
	  	</div>
 	
<% end %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script>

	document.addEventListener('page:change', function() 
	{
        document.getElementById('primary-content').className += 'animated fadeIn';
	});
	document.addEventListener('page:fetch', function() 
	{
        document.getElementById('primary-content').className += 'animated fadeOut';
	});

</script>
