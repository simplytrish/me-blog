<!DOCTYPE html>
<html>
<head>
  <title>Ketchup & Eggs</title>


  <!--Styling Assests-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    "/assets/bootstrap.min.css" %>

  <!-- Bootstrap -->
  <!--<link href="css/bootstrap.min.css" rel="stylesheet">-->
  <link href="/assets/bootstrap.min.css" media="all" rel="stylesheet" />

  <!--Fonts-->
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:100,300' %>

  <!--Scripts-->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "/assets/bootstrap.min.js" %>

  
</head>



<body>

	<div id="wrapper">
		
		<!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                   <%= link_to image_tag("logo2.png", :alt => "logo image", :width => 150, :height => 160), root_path %>

                </li>
                <br><br><br><br><br><br>
				<li class="list-style"><%= link_to "HOME", root_path %></li>
				<li class="list-style"><%= link_to "ABOUT", about_path %></li>
				<li class="list-style"><a href="https://www.tadaku.com/my/menus">COOKING CLASSES</a></li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->


			<!--
			<% if !user_signed_in? %>
				<p class="sign_in"><%= link_to "Admin login", user_session_path %></p>
			<% end %>
			-->


		 <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
            	<div class="row">
            		<div class="col-lg-12 nopadding">
	            		
	            		<div class="header">
		            		<% if current_page?(root_path) %>
							 <p>ketchup and eggs</p>
								<% elsif current_page?(about_path) %>
								 <p>ABOUT</p>
								<% else %>
									<p id="postlink"><%= link_to "ketchup and eggs", root_path %></p>
								<% end %>
					
							<% if user_signed_in? %>
								<div class="button">
									<button class="btn btn-default" type="button"><%= link_to "NEW POST", new_post_path%></button>
									<button class="btn btn-default" type="button"><%= link_to 'LOG OUT', destroy_user_session_path, :method => :delete%></button>	
								</div>
							<% end %>
						</div>       	
	          		</div>
           

                <!--<div class="row">
                    <div class="col-lg-12">
                        <!--<a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                    </div>
                </div>
            </div>-->
        </div>
        <!-- /#page-content-wrapper -->

			<!--Flash message to show after an action
			What is the difference between <%= %> and without the = sign? -->
			<% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert")%>
			<% end %>

			<%= yield %>
		

	</div>

</body>
</html>
