		</ul>-->

		<!--
		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin login", user_session_path %></p>
		<% end %>
		-->

	</div>

	<div class="main_content">
		<div class="header">
			<% if current_page?(root_path) %>
			 <p>All Notes</p>
			<% elsif current_page?(about_path) %>
			 <p>About</p>
			<% else %>
				<%= link_to "Back to Notes", root_path %>
			<% end %>

			<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path%></button>
					
					<%= link_to 'log out', destroy_user_session_path, :method => :delete, class: 'button' %>
				</div>
			<% end %>
		</div>

		<!--Flash message to show after an action
		What is the difference between <%= %> and without the = sign? -->
		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert")%>
		<% end %>

		<%= yield %>
	</div>



</body>
</html>
